<%
  result = GetUnreadNotifications.call(user: current_user)
  result.notifications.each do |notification| 
%>
  <%= content_tag :div, class: "alert alert-dismissable alert-#{ notification.kind || 'info' }" do |div| %>
    <%= link_to "&times;".html_safe, mark_as_read_notification_path(notification), remote: true, method: :put, class: 'close mark-as-read' %>
    <%= button_tag "&times;".html_safe, class: 'close hidden', data: {dismiss: 'alert'}, 'aria-hidden' => 'true' %>
    <%= notification.message.html_safe %>
  <% end %>
<% end %>
